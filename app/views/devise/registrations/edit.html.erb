
<div class="panel panel-default">
  <div class="panel-heading">
    <h4><%= t(".title", resource: resource_class.model_name.human, default: "Edit #{resource_name.to_s.humanize}") %></h4>
  </div>

  <div class="panel-body">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
                                                     html: {
                                                       method: :put
                                                     }) do |f| %>

      <%= f.input :personable_type, prompt: nil, autofocus: true %>
      <%= f.input :first_name, required: true, wrapper_html: { class: "individual" } %>
      <%= f.input :last_name, required: true, wrapper_html: { class: "individual" } %>
      <%= f.input :cpf, required: true, wrapper_html: { class: "individual" } %>
      <%= f.input :corporate_name, required: true, wrapper_html: { class: "company" } %>
      <%= f.input :cnpj, required: true, wrapper_html: { class: "company" } %>
      <%= f.input :phone %>
      <%= f.input :email, autofocus: true %>
      <%= f.input :password, hint: t(".leave_blank_if_you_don_t_want_to_change_it", default: "leave blank if you don't want to change it"), autocomplete: "off" %>
      <%= f.input :password_confirmation, hint: t(".leave_blank_if_you_don_t_want_to_change_it", default: "leave blank if you don't want to change it"), autocomplete: "off" %>
      <%= f.input :current_password, hint: t(".we_need_your_current_password_to_confirm_your_changes", default: "we need your current password to confirm your changes") %>

      <%= f.submit t(".update", default: "Update"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<p>
  <%= t(".unhappy", default: "Unhappy") %>? <%= link_to t(".cancel_my_account", default: "Cancel my account"), registration_path(resource_name), data: { confirm: t(".are_you_sure", default: "Are you sure?") }, method: :delete %>.
</p>