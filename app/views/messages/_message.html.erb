<div class="message">
  <table>
    <tbody>
      <tr>
        <td><%= image_tag("http://placehold.it/60x60", class: "img-circle") %></td>
        <td><span class="text"><%= message.text %></span></td>
      </tr>
      <tr>
        <td><span class="author"><%= message.user_first_name %></span></td>
        <td><span class="sent-at">Enviado <%= time_ago_in_words(message.created_at) %></span>
        </td>
      </tr>
    </tbody>
  </table>
</div>
